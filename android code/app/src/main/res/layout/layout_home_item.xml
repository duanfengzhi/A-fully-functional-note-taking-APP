<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@android:color/transparent">

    <TextView
            android:text="测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textSize="22sp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/iv_trash_type"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_trash_type"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/denglong2"
            android:id="@+id/iv_important"
            android:background="@android:color/transparent"
            app:layout_constraintWidth_max="30dp" app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@+id/tv_title" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" tools:ignore="ContentDescription" android:layout_marginTop="8dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp" app:srcCompat="@drawable/trash"
            android:id="@+id/iv_trash" app:layout_constraintWidth_max="35dp"
            android:background="@android:color/transparent"
            app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/record"
            android:id="@+id/iv_trash_type"
            app:layout_constraintDimensionRatio="1:1" app:layout_constraintWidth_max="35dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="ContentDescription"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/view6" android:background="#646060"
            app:layout_constraintStart_toStartOf="parent"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>