<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.task.TaskEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/account_title" android:textSize="30sp" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="101dp" android:id="@+id/textView10"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_return"
                android:id="@+id/btn_back" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintDimensionRatio="w,1:1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="96dp"
                app:layout_constraintTop_toTopOf="@+id/textView10" tools:ignore="ContentDescription"
                android:background="@drawable/people" app:layout_constraintDimensionRatio="w,1:1"/>
        <TextView

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/tv_name" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:background="@drawable/user_name"
                app:layout_constraintDimensionRatio="w,1:1"/>
        <TextView
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name2" android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/tv_name"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/tv_tel" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/tv_name"
                android:textSize="24sp" android:layout_marginTop="32dp" app:layout_constraintDimensionRatio="w,1:1"
                android:background="@drawable/telephone"/>
        <TextView
                android:text="18356953625"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tel2"
                app:layout_constraintStart_toEndOf="@+id/tv_tel" android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@+id/tv_tel"/>
        <Button
                android:text="@string/account_edit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btn_tel"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tel2" app:layout_constraintTop_toTopOf="@+id/tv_tel2"
                android:background="@drawable/hengxian" android:gravity="center_horizontal"
                app:layout_constraintDimensionRatio="w,3:2"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/tv_email" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_tel" android:background="@drawable/email"
                app:layout_constraintDimensionRatio="w,1:1"/>
        <TextView
                android:text="865932659@qq.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email2"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/tv_tel2" app:layout_constraintTop_toTopOf="@+id/tv_email"/>
        <Button
                android:text="@string/account_edit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btn_email"
                android:background="@drawable/hengxian" android:gravity="center_horizontal"
                app:layout_constraintDimensionRatio="w,3:2"
                app:layout_constraintEnd_toEndOf="@+id/textView10" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_email2"
                app:layout_constraintTop_toTopOf="@+id/tv_email2" android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/account_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_logout" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" android:background="@drawable/bg_btn_white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

