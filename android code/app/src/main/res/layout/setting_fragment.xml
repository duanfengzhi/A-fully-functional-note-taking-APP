<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <com.hfut.cqyzs.memorandum.utils.SlideButton
                android:id="@+id/slideButton"

                android:layout_width="0dp" android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="250dp" android:layout_marginStart="250dp"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"/>
        <TextView
                android:text="  开启夜间模式"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp" android:layout_marginTop="100dp"/>
        <Button
                android:text="    悬浮球"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textSize="20sp"
                android:layout_marginTop="32dp" android:background="@drawable/hengxian"
                android:gravity="center_horizontal|left" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"/>
        <Button
                android:text="    关于山人自有妙记"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="0.0" android:background="@drawable/hengxian"
                android:gravity="center_horizontal|left"/>
        <Button
                android:text="    意见反馈"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                app:layout_constraintHorizontal_bias="1.0"
                android:textSize="20sp" android:background="@drawable/hengxian"
                android:gravity="center_horizontal|left"/>
        <Button
                android:text="    检查更新"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button3"
                android:textSize="20sp" android:background="@drawable/hengxian"
                android:gravity="center_horizontal|left"/>
        <Button
                android:text="    清除本地缓存"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/button6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                android:textSize="20sp"
                android:background="@drawable/hengxian" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
                android:gravity="center_horizontal|left"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/btn_return" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintDimensionRatio="w,1:1"
                android:background="@drawable/btn_return"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>